{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/docs/src",
  "targets": {
    "build": {
      "executor": "@nx-plus/docusaurus:browser",
      "options": {
        "outputPath": "dist/packages/docs"
      }
    },
    "serve": {
      "executor": "@nx-plus/docusaurus:dev-server",
      "options": {
        "port": 3000
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "push": true,
        "postTargets": [
          "tunnel-docs:docker:production"
        ]
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "load": true,
        "tags": ["monday/tunnel-docs:latest"]
      },
      "dependsOn": ["build"],
      "configurations": {
        "production": {
          "load": false,
          "push": true,
          "tags": [
            "us-east1-docker.pkg.dev/monday-localtunnel/localtunnel/tunnel-docs:latest",
            "us-east1-docker.pkg.dev/monday-localtunnel/localtunnel/tunnel-docs:${version}"
          ]
        }
      }
    }
  },
  "tags": []
}
